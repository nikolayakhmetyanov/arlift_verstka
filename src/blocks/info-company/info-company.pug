mixin info-company
  +b.info-company.mb-60
    +e.wrap-elements
      +e.wrap-input.--w50
        +e.LABEL.label Название компании
        +e.INPUT.input(value="ООО “АрмаСтройМаш”")
      +e.wrap-input.--w50
        +e.LABEL.label ИНН
        +e.INPUT.input(value="310511089342")
      +e.wrap-input.--w50
        +e.LABEL.label Город
        +e.INPUT.input(value="Санкт-Петербург")
      +e.wrap-input.--w50
        +e.LABEL.label Сфера деятельности
        +e.SELECT.select
          option(value='') --Please choose an option--
          option(value='dog') Dog
          option(value='cat') Cat
          option(value='hamster') Hamster
          option(value='parrot') Parrot
          option(value='spider') Spider
          option(value='goldfish') Goldfish
      +e.wrap-input
        +e.LABEL.label Юр.адрес компании
        +e.TEXTAREA.input.--textarea(value="192289, Россия, Санкт-Петербург, пр. 9-го Января, д. 18, литер А")
      +e.wrap-input
        +e.LABEL.label Контактное лицо ФИО
        +e.INPUT.input(value="Иван Иванов Иванович")
      +e.wrap-input.--w50
        +e.LABEL.label Номер телефона*
        +e.INPUT.input(value="+7 (812) 313-22-28")
      +e.wrap-input.--w50
        +e.LABEL.label Почта*
        +e.INPUT.input(value="arma@stroj.com")
      +e.error-block
        +e.wrap-icon
          include /assets/img/warning.svg
        span Нашли ошибку или хотите отредактировать данные ?
        a(href="Оставить заявку") Оставить заявку
        